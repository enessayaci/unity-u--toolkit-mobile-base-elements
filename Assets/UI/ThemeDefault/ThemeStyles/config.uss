:root{
  --text-color-base: var(--primary-dark-60);
  --font-size-small: 12px;
  --font-size-base: 16px;
  --font-size-large: 20px;

  --radius-base: 8px;
  --radius-large: 16px;
  --radius-xlarge: 24px;
  --border-width-small: 1px;
  --border-width-base: 2px;
  --border-width-large: 4px;

  --margin-base:8px;
  --margin-large:16px;

  --padding-small:4px;
  --padding-base:8px;
  --padding-large:16px;


  --icon-width-base: 55px;
  --icon-width-small: 35px;
  --icon-width-large: 75px;

  --modal-close-icon-size: 25px;

  --button-font-asset: url('project://database/Assets/UI/ThemeDefault/Public/Fonts/Rammetto_One/RammettoOne-RegularSDF.asset');
  --button-font: url('project://database/Assets/UI/ThemeDefault/Public/Fonts/Rammetto_One/RammettoOne-Regular.ttf');
  --button-font-size: var(--font-size-base);
  --button-height-base: 60px;
  --button-round-amount:  var(--radius-large);
  --button-pressed-transition: 0.1s;
  --button-press-amount: 5px;
  --button-square-base: var(--button-height-base);
  --button-square-icon-size: var(--icon-width-small);
  --button-shadow-position-bottom: -10px;
  --button-margin-bottom: 10px; /*! (--button-shadow-position-bottom * -1) */
  --little-balloon-height: 15px;
  --little-balloon-width: 20px;
  --button-square-bottom-border-height: 8px;

  /*these 2 variable will be set when you decide how much your header and footer has height as pixels it is automaticly added to each main tab menu content. eg SettingsPanel, HomePanel, ShopPanel... to not to overlay these panels' content over the header or footer.*/
  --header-top-offset: 35px; /*Ä°t is variable related to device that we base (iphone 12 at the moment). Most device has a dead area on top of screen beacuse of camera placement.*/
  --footer-bottom-offset: 15px; 
}